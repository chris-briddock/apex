{
  "name": "apexcss",
  "version": "0.3.0",
  "description": "Apex` - A utility-first CSS framework with 500+ utility classes",
  "type": "module",
  "main": "dist/apex.css",
  "module": "dist/apex.css",
  "style": "dist/apex.css",
  "files": [
    "src/**/*.scss"
  ],
  "exports": {
    ".": {
      "style": "./dist/apex.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run config:build && npm run lint && vite build",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "lint": "stylelint 'src/**/*.scss'",
    "clean": "rm -rf dist",
    "config:init": "node tools/config-builder.js --init",
    "config:build": "node tools/config-builder.js",
    "config:watch": "node tools/config-builder.js --watch",
    "test:e2e": "cd tests/e2e && npm run test:e2e",
    "test:e2e:ui": "cd tests/e2e && npm run test:e2e:ui",
    "test:e2e:install": "cd tests/e2e && npm install && npx playwright install chromium"
  },
  "keywords": [
    "css",
    "framework",
    "utility-first",
    "sass",
    "scss",
    "apexcss",
    "tailwind",
    "bootstrap-alternative"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "autoprefixer": "^10.4.27",
    "mocha": "^11.7.5",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "sass": "^1.97.3",
    "sass-true": "^10.1.0",
    "stylelint": "^17.3.0",
    "stylelint-config-standard-scss": "17.0.0",
    "vite": "^7.3.1"
  }
}
