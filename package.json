{
  "name": "apexcss",
  "version": "0.2.4",
  "description": "Apex` - A comprehensive utility-first CSS framework with 500+ utility classes",
  "type": "module",
  "main": "dist/framework.css",
  "module": "dist/framework.css",
  "style": "dist/framework.css",
  "files": [
    "dist/framework.css",
    "dist/framework.css.map",
    "src/**/*.scss"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run arbitrary:build && npm run config:build && vite build && mv dist/framework2.css dist/framework.css",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "lint": "stylelint 'src/**/*.scss'",
    "clean": "rm -rf dist",
    "config:init": "node tools/config-builder.js --init",
    "config:build": "node tools/config-builder.js",
    "config:watch": "node tools/config-builder.js --watch",
    "config:css": "node tools/config-builder.js --css",
    "arbitrary:build": "node tools/arbitrary-values-generator.js",
    "test:e2e": "cd tests/e2e && npm run test:e2e",
    "test:e2e:ui": "cd tests/e2e && npm run test:e2e:ui",
    "test:e2e:install": "cd tests/e2e && npm install && npx playwright install chromium"
  },
  "keywords": [
    "css",
    "framework",
    "utility-first",
    "sass",
    "scss",
    "apexcss",
    "tailwind",
    "bootstrap-alternative"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "mocha": "^11.7.5",
    "postcss": "^8.4.0",
    "postcss-scss": "^4.0.0",
    "sass": "^1.69.0",
    "sass-lint": "^1.13.0",
    "sass-true": "^10.1.0",
    "stylelint": "17.3.0",
    "stylelint-config-standard-scss": "17.0.0",
    "vite": "^7.3.1",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-sass": "^0.1.0"
  }
}
