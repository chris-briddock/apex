{
  "extends": ["stylelint-config-standard-scss"],
  "customSyntax": "postcss-scss",
  "rules": {
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["use", "forward", "if", "each", "for", "while", "mixin", "include", "extend", "function", "return", "warn", "error", "debug"]
      }
    ],
    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "no-duplicate-selectors": true,
    "no-empty-source": true,
    "color-hex-length": "short",
    "color-no-invalid-hex": true,
    "font-family-no-duplicate-names": true,
    "function-url-quotes": "always",
    "unit-no-unknown": true,
    "property-no-unknown": true,
    "shorthand-property-no-redundant-values": true,
    "value-no-vendor-prefix": true,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["bg-*", "text-*", "border-*", "hover", "focus", "active", "disabled", "visited", "first", "last", "odd", "even", "before", "after", "placeholder"]
      }
    ],
    "selector-pseudo-element-no-unknown": true,
    "media-feature-name-no-unknown": true,
    "property-no-deprecated": true,
    "color-function-notation": null,
    "alpha-value-notation": null,
    "color-function-alias-notation": null,
    "declaration-empty-line-before": null,
    "rule-empty-line-before": null,
    "declaration-block-single-line-max-declarations": null,
    "custom-property-empty-line-before": null
  }
}
